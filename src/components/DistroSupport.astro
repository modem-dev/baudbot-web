---
const distros = [
  {
    name: "Omarchy",
    status: "supported",
    description: "Fully supported with native packages"
  },
  {
    name: "Arch Linux",
    status: "supported", 
    description: "Available in AUR and through direct install"
  },
  {
    name: "Ubuntu",
    status: "supported",
    description: "LTS and latest versions fully supported"
  },
  {
    name: "Debian",
    status: "coming-soon",
    description: "Official packages coming soon"
  }
];

// SVG logos for each distro
const logos = {
  "Omarchy": `<svg viewBox="0 0 100 100" class="w-12 h-12">
