  "Debian": `<svg viewBox="0 0 100 100" class="w-12 h-12">
    <defs>
      <linearGradient id="debian-grad" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#8b949e;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#484f58;stop-opacity:1" />
      </linearGradient>
    </defs>
    <path d="M30 50 Q50 20, 70 50 Q50 80, 30 50 Z" fill="url(#debian-grad)"/>
    <circle cx="45" cy="45" r="3" fill="#050810"/>
