};
---

<section id="distro-support" class="relative py-32">
  <!-- Section border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-border-subtle to-transparent"></div>

  <div class="mx-auto max-w-6xl px-6">
    <!-- Section header -->
    <div class="mb-16">
      <div class="flex items-center gap-3 mb-4">
        <span class="text-accent font-mono font-bold text-lg">⟩</span>
        <span class="text-sm font-semibold text-accent uppercase tracking-widest">Compatibility</span>
      </div>
      <h2 class="text-4xl sm:text-5xl font-bold tracking-tight mb-4">
        Works on your favorite distros
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl">
        Baudbot runs natively on major Linux distributions. Choose the distro your team knows best — Baudbot adapts to your environment, not the other way around.
      </p>
    </div>

    <!-- Distro grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {distros.map((distro) => (
        <div class={`group relative rounded-2xl border p-6 text-center transition-all duration-300 ${
          distro.status === 'supported' 
            ? 'border-border-subtle bg-bg-card hover:bg-bg-card-hover hover:border-accent/20' 
            : 'border-border-subtle bg-bg-card/50 opacity-70'
        }`}>
          
          {/* Hover glow for supported distros */}
          {distro.status === 'supported' && (
            <div class="absolute inset-0 rounded-2xl bg-accent/[0.02] opacity-0 group-hover:opacity-100 transition-opacity"></div>
          )}

          <div class="relative">
            <!-- Logo -->
            <div class="flex justify-center mb-4">
              <Fragment set:html={logos[distro.name]} />
            </div>

            <!-- Name -->
            <h3 class={`text-lg font-semibold mb-2 ${
              distro.status === 'supported' ? 'text-text-primary' : 'text-text-muted'
            }`}>
              {distro.name}
            </h3>

            <!-- Status badge or description -->
            {distro.status === 'coming-soon' ? (
              <div class="mb-3">
                <span class="inline-flex items-center rounded-full bg-text-muted/10 border border-text-muted/20 px-3 py-1 text-xs font-semibold text-text-muted uppercase tracking-wider">
                  Coming Soon
                </span>
              </div>
            ) : (
              <div class="mb-3">
                <span class="inline-flex items-center rounded-full bg-accent/10 border border-accent/20 px-3 py-1 text-xs font-semibold text-accent uppercase tracking-wider">
                  Supported
                </span>
              </div>
            )}

            <!-- Description -->
            <p class={`text-sm leading-relaxed ${
              distro.status === 'supported' ? 'text-text-secondary' : 'text-text-muted'
            }`}>
              {distro.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Additional note -->
    <div class="mt-8 rounded-xl border border-border-subtle bg-bg-card/50 px-6 py-5 flex items-start gap-4">
      <div class="text-accent font-mono font-bold text-lg shrink-0 mt-0.5">⟩</div>
      <div>
        <p class="text-sm text-text-secondary leading-relaxed">
          <span class="text-text-primary font-semibold">Don't see your distro?</span>
          {" "}Baudbot is built with standard Linux tools and should run on most distributions. We're actively adding official support for more distros — reach out if you'd like to help test on yours.
        </p>
      </div>
    </div>
  </div>
</section>